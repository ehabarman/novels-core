extend type Query {
    book(id: ID!): Book
}

extend type Mutation {
    createBook(input: CreateBookInput!): Book
}

type Book {
    id: String!
    title: String!
    description: String!
    coverPhoto: String
    ownerId: String!
    status: BookStatus!
    createdAt: String!
    updatedAt:String!
}

enum BookStatus {
    COMPLETED,
    DROPPED,
    HIATUS,
    IN_PROGRESS
}

input CreateBookInput {
    title: String!
    description: String!
    coverPhoto: String
}
